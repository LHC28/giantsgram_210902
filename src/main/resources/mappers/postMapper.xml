<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.giantsgram.post.dao.PostDAO">
	<insert id="postCreate" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`loginId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{loginId}
			,#{content}
			,#{imagePath}
			,NOW()
			,NOW()
		)
	</insert>
	<select id="getPostList" resultType="com.giantsgram.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`loginId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>
	<select id="countPost" resultType="int">
		SELECT COUNT(`id`)
		FROM `post`
		WHERE
			`userId` = #{userId}
	</select>
	<select id="getPostListByUserId" resultType="com.giantsgram.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`loginId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	
	<delete id="postDelete">
		DELETE
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</delete>
</mapper>