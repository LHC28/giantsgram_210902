<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.giantsgram.like.dao.LikeDAO">
	<select id="getLikeCount" resultType="Integer">
		SELECT
		COUNT(`userId`)
		FROM
			`like`
		WHERE
			`postId` = #{postId}		
	</select>
	<select id="getLikeClick" parameterType="map" resultType="com.giantsgram.like.model.Like">
		SELECT
			`userId`
			,`postId`
			,`createdAt`
			,`updatedAt`
		FROM
			`like`
		WHERE
			`userId` = #{userId}
			AND `postId` = #{postId}
	</select>
	<delete id="deleteLike" parameterType="map">
		DELETE
		FROM `like`
		WHERE
			`userId` = #{userId}
			AND `postId` = #{postId}
	</delete>
	<insert id="addLike" parameterType="map">
		INSERT INTO `like`
		(
		`userId`
		,`postId`
		,`createdAt`
		,`updatedAt`
		)
		VALUES
		(
		#{userId}
		,#{postId}
		,NOW()
		,NOW()
		)
		
	</insert>
</mapper>