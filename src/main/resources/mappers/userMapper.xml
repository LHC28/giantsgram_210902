<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.giantsgram.user.dao.UserDAO">
	<insert id="addUser" parameterType="map">
		INSERT INTO `user`
		(
			`loginId`
			,`password`
			,`name`
			,`nickname`
			,`phoneNumber`
			,`email`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			,#{password}
			,#{name}
			,#{loginId}
			,#{phoneNumber}
			,#{email}
			,NOW()
			,NOW()
		)
	</insert>
	<select id="duplicatedId" resultType="com.giantsgram.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`nickname`
			,`phoneNumber`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	<select id="selectUser" parameterType="map" resultType="com.giantsgram.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`nickname`
			,`phoneNumber`
			,`email`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
	</select>
	<select id="selectUserById" resultType="com.giantsgram.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`nickname`
			,`phoneNumber`
			,`email`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{userId}
	</select>
	<update id="profileChange" parameterType="map">
		UPDATE `user`
		SET
			`name` = #{name}
			,`nickname` = #{nickname}
			,`phoneNumber` = #{phoneNumber}
			,`email` = #{email}
			,`imagePath` = #{imagePath}
			,`updatedAt` = NOW()
		WHERE
			`id` = #{userId}
	</update>
</mapper>