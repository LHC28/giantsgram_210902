<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.giantsgram.comment.dao.CommentDAO">
	<insert id="addComment" parameterType="map">
		INSERT INTO `comment`
		(
		`userId`
		,`userName`
		,`postId`
		,`content`
		,`createdAt`
		,`updatedAt`
		)
		VALUES
		(
		#{userId}
		,#{userName}
		,#{postId}
		,#{content}
		,NOW()
		,NOW()
		)
	</insert>
	<select id="getCommentList" resultType="com.giantsgram.comment.model.Comment">
		SELECT
			`id`
			,`userId`
			,`userName`
			,`postId`
			,`content`
			,`createdAt`
			,`updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
	</select>
	<delete id="deleteComment" parameterType="map">
		DELETE
		FROM `comment`
		WHERE
			`userId` = #{userId}
			AND `postId` = #{postId}
	</delete>
</mapper>